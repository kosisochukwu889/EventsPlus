<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <title>@ViewBag.Title - EventPlus</title>

    <!-- Favicons -->
    <link href="~/Images/img/favicon.png" rel="icon">
    <link href="~/Images/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>


<body id="page-top">
    <!-- ======= Header ======= -->
    <header id="header" class="@(Request.Url.ToString() == "http://127.0.0.1:8080/Home" || Request.Url.ToString() == "http://127.0.0.1:8080/"?"":"header-fixed")">
        <div class="container">

            <div id="logo" class="pull-left">
                 <h1><a href="/Home">Events<span>Plus</span></a></h1>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    @if (Session["UserType"] != null)
                    {
                        <li><a href="">Hi @Session["FirstName"],</a></li>
                    }
                    <li class="menu-active"><a href="/Home">Home</a></li>
                    <li><a href="/Home#about">About</a></li>
                    <li><a href="/Home#gallery">Gallery</a></li>
                    <li><a href="/Home#contact">Contact</a></li>
                    @if (Session["UserType"] != null)
                    {
                        <li>
                            @Html.ActionLink(Session["UserType"] == "Organizer" ? "My Events" : "Events", "AllEvents", "Event", new { area = "" }, new { @class = "" })
                        </li>

                        if (Session["UserType"] == "Admin")
                        {
                            <li>
                                @Html.ActionLink("Users", "AllUsers", "User", new { area = "" }, new { @class = "" })
                            </li>
                        }
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "" })
                        </li>
                        <li class="buy-tickets">
                            @Html.ActionLink("Buy Tickets", "AllEvents", "Event", new { area = "" }, new { @class = "" })
                        </li>
                    }

                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </header><!-- End Header -->

    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright © 2021 - <strong>EventsPlus Ltd</strong>. All Rights Reserved
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content//vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/vendor/venobox/venobox.min.js"></script>
    <script src="~/Content/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Content/vendor/superfish/superfish.min.js"></script>
    <script src="~/Content/vendor/hoverIntent/hoverIntent.js"></script>
    <script src="~/Content/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
